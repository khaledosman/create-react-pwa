    "axios": "^0.18.0",
    "ms": "^2.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf build/ && react-scripts build && npm run-script sw-epilog",
